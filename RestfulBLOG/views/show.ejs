<% include ./partials/header %>
<div class="ui main text container segment">
  <div class="ui huge header"> <%= blog.title %></div>
    <div class="ui top attached ">
      <div class="item">
        <img class="ui centered rounded image" src="<%= blog.image %>">
      </div>
      <div class="content">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body %></p><!-- We use <%- %> for HTML editing purpose by the editor but be careful script
        will make some problems -->
      </div>
      <a class="ui orange inverted button"href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="post">
        <button class="ui red inverted button">Delete</button>
      </form>
    </div>
  </div>
</div>
<% include ./partials/footer %>
